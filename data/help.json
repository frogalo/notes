{
    "version": "0.4.2",
    "title": "Notes Editor - Help",
    "sections": [
        {
            "heading": "Getting Started",
            "icon": "rocket",
            "description": "Welcome to Notes Editor! This is a modern markdown text editor with live preview.",
            "items": [
                {
                    "label": "Document Title",
                    "text": "The first line is automatically styled as your document title"
                },
                {
                    "label": "Live Preview",
                    "text": "Syntax characters hide automatically while you type, showing clean formatted text"
                },
                {
                    "label": "Smart Lists",
                    "text": "Press Enter in a list to continue it. Empty list item? Press Enter again to exit"
                }
            ]
        },
        {
            "heading": "Markdown Syntax",
            "icon": "code-2",
            "description": "Format your text with simple markdown syntax",
            "items": [
                {
                    "label": "Headers",
                    "syntax": "# H1  ## H2  ### H3",
                    "text": "Create headers of different sizes"
                },
                {
                    "label": "Bold Text",
                    "syntax": "**bold text**",
                    "text": "Make text bold for emphasis"
                },
                {
                    "label": "Italic Text",
                    "syntax": "*italic text*",
                    "text": "Italicize text for subtle emphasis"
                },
                {
                    "label": "Bold + Italic",
                    "syntax": "***bold and italic***",
                    "text": "Combine both for maximum emphasis"
                },
                {
                    "label": "Inline Code",
                    "syntax": "`code here`",
                    "text": "Highlight code or technical terms"
                },
                {
                    "label": "Links",
                    "syntax": "[Link Text](https://url.com)",
                    "text": "Create clickable hyperlinks"
                },
                {
                    "label": "Blockquotes",
                    "syntax": "> Quote text",
                    "text": "Add quotes or callouts"
                },
                {
                    "label": "Bullet Lists",
                    "syntax": "- List item",
                    "text": "Create unordered lists with -, *, or +"
                },
                {
                    "label": "Numbered Lists",
                    "syntax": "1. List item",
                    "text": "Create ordered lists with numbers"
                },
                {
                    "label": "Horizontal Rule",
                    "syntax": "---",
                    "text": "Add a divider line"
                }
            ]
        },
        {
            "heading": "Keyboard Shortcuts",
            "icon": "keyboard",
            "description": "Save time with these handy shortcuts",
            "items": [
                {
                    "label": "New File",
                    "syntax": "Ctrl+N",
                    "text": "Create a new document"
                },
                {
                    "label": "Open File",
                    "syntax": "Ctrl+O",
                    "text": "Open an existing document"
                },
                {
                    "label": "Save",
                    "syntax": "Ctrl+S",
                    "text": "Save current document"
                },
                {
                    "label": "Save As",
                    "syntax": "Ctrl+Shift+S",
                    "text": "Save with a new name/location"
                }
            ]
        },
        {
            "heading": "Interface Features",
            "icon": "layout-dashboard",
            "description": "Make the most of the editor interface",
            "items": [
                {
                    "label": "Status Indicator",
                    "text": "The colored dot shows save status (Pink = Unsaved, Cyan = Saved)"
                },
                {
                    "label": "Font Switcher",
                    "text": "Click the font name in the status bar to cycle through fonts"
                },
                {
                    "label": "Statistics",
                    "text": "View real-time line, character, and word counts in the status bar"
                },
                {
                    "label": "Right-Click Menu",
                    "text": "Right-click anywhere to access Cut, Copy, and Paste"
                }
            ]
        }
    ]
}