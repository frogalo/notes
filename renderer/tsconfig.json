{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES6",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": ".",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "typeRoots": [
            "../src",
            "../node_modules/@types"
        ]
    },
    "include": [
        "renderer.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}