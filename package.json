{
  "name": "notes-editor",
  "version": "0.5.2",
  "description": "A simple text editor built with Electron",
  "main": "dist/main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build && electron .",
    "build": "tsc && cd renderer && tsc",
    "watch": "tsc --watch",
    "package": "npm run build && electron-builder",
    "package:linux": "npm run build && electron-builder --linux",
    "package:win": "npm run build && electron-builder --win",
    "package:all": "npm run build && electron-builder --linux --win"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.notes.editor",
    "productName": "Notes Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "data/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Notes Editor"
    }
  }
}